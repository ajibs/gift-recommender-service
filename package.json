{
  "name": "gift-recommender",
  "version": "1.0.0",
  "description": "recommends gifts for friends",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "reboot": "npm run rollback && npm run migrate && npm run seed",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "precommit": "lint-staged",
    "postcommit": "git update-index --again"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "node_modules/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajibs/gift-recommender.git"
  },
  "author": "Bolu Ajibawo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ajibs/gift-recommender/issues"
  },
  "homepage": "https://github.com/ajibs/gift-recommender#readme",
  "dependencies": {
    "bookshelf": "0.14.2",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "knex": "0.14.6",
    "mysql": "2.16.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "eslint": "5.6.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.0.0-rc.15",
    "lint-staged": "7.3.0"
  }
}
